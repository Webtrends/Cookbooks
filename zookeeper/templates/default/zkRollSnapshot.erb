#!/usr/bin/env bash

COMMAND="java"
if [ "$(whoami)" != "zookeeper" ]
then
	COMMAND="sudo -u zookeeper java"
fi

logger -s "zkRollSnapshot"

<%= node.zookeeper_attrib(:install_dir) %>/current/bin/zkCleanup.sh  <%= node.zookeeper_attrib(:data_dir) %> <%= node.zookeeper_attrib(:snapshot_dir) %> <%= node.zookeeper_attrib(:snapshot_num) %>

exit 0
