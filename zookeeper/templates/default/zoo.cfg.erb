# The number of milliseconds of each tick
tickTime=<%= @tick_time %>
# The number of ticks that the initial 
# synchronization phase can take
initLimit=<%= @init_limit %>
# The number of ticks that can pass between 
# sending a request and getting an acknowledgement
syncLimit=<%= @sync_limit %>
# the directory where the snapshot is stored.
# do not use /tmp for storage, /tmp here is just 
# example sakes.
dataDir=<%= @data_dir %>
# the port at which the clients will connect
clientPort=<%= @client_port %>
# max connections from a single IP address
maxClientCnxns=<%= @max_client_cnxns %>


#
# Be sure to read the maintenance section of the 
# administrator guide before turning on autopurge.
#
# http://zookeeper.apache.org/doc/current/zookeeperAdmin.html#sc_maintenance


# This option will direct the machine to write the transaction log to the dataLogDir rather than the dataDir. This allows a dedicated
# log device to be used, and helps avoid competition between logging and snaphots.
dataLogDir=<%= @data_log_dir %>

# The number of snapshots to retain in data Dir <-- edit by sean: keep a space between data and Dir, otheriwse zkServer.sh start will fail
autopurge.snapRetainCount=<%= @snapshot_num %>

# Purge task interval in hours
# Set to "0" to disable auto purge feature
autopurge.purgeInterval=<%= @purge_interval %>



# zookeeper servers in quorum
<% x = 0 -%>
<% @quorum.each do |server| -%>
server.<%= x += 1 %>=<%= server %>:2888:3888
<% end -%>
